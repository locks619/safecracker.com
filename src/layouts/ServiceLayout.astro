---
import BaseLayout from "../../layouts/BaseLayout.astro";

const { title, description, heroImage, services } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <section class="relative h-96 flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-slate-900/95 to-gray-900/90 z-10"></div>
    <img src={heroImage} alt={title} class="absolute inset-0 w-full h-full object-cover"/>
    <div class="container mx-auto px-4 z-20 relative text-center text-white">
      <h1 class="text-6xl font-black mb-4">{title}</h1>
      <p class="text-2xl text-gray-300">{description}</p>
    </div>
  </section>

  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 max-w-4xl">
      <slot />
      
      <div class="mt-16 p-8 bg-amber-50 rounded-2xl border-l-4 border-amber-500">
        <h3 class="text-2xl font-bold mb-4">Request Service</h3>
        <p class="text-gray-700 mb-6">Mobile service across 150-mile radius from Fallbrook, CA</p>
        <div class="flex gap-4">
          <a href="tel:6197948355" class="bg-amber-500 text-white px-8 py-4 rounded-full font-bold hover:bg-amber-600 transition-all">
            Call (619) 794-8355
          </a>
          <a href="/contact" class="bg-gray-900 text-white px-8 py-4 rounded-full font-bold hover:bg-gray-800 transition-all">
            Get Quote
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
