<style data-site-nav>
  .site-header{
    position:sticky; top:0; z-index:50;
    background:rgba(0,0,0,.75);
    backdrop-filter: blur(10px);
    border-bottom:1px solid rgba(255,255,255,.08);
  }
  .nav-wrap{
    max-width:1100px; margin:0 auto;
    padding:10px 16px;
    display:flex; align-items:center; justify-content:space-between;
    gap:16px;
  }
  .nav-brand{
    font-family: var(--font-display, inherit);
    letter-spacing:.06em; text-transform:uppercase;
    font-size:14px; white-space:nowrap;
    text-decoration:none;
  }
  .nav-brand { display: flex; flex-direction: column; gap: 2px; }
  .nav-brand a { text-decoration: none; }
  .nav-license { font-size: 10px; opacity: 0.7; letter-spacing: 0.05em; font-weight: 400; }
  .nav{
    display:flex; align-items:center; gap:14px;
    flex-wrap:wrap;
  }
  .nav-link{
    font-size:14px; opacity:.92;
    text-decoration:none;
  }
  .nav-link:hover{ opacity:1; }
  .nav-cta{
    font-size:14px;
    padding:8px 10px;
    border:1px solid rgba(255,255,255,.18);
    border-radius:10px;
    text-decoration:none;
    white-space:nowrap;
  }

  .nav-dd{ position:relative; }
  .nav-dd-menu{
    display:none;
    position:absolute;
    top:calc(100% + 8px);
    left:0;
    min-width:220px;
    padding:8px;
    background:rgba(0,0,0,.92);
    border:1px solid rgba(255,255,255,.12);
    border-radius:12px;
    box-shadow:0 14px 40px rgba(0,0,0,.45);
  }
  .nav-dd:hover .nav-dd-menu{ display:block; }
  .nav-dd-menu a{
    display:block;
    padding:10px 10px;
    border-radius:10px;
    text-decoration:none;
    opacity:.92;
  }
  .nav-dd-menu a:hover{
    background:rgba(255,255,255,.08);
    opacity:1;
  }

  /* Mobile: keep nav non-breaking + readable */
  @media (max-width:720px){
    .nav{ gap:10px; }
    .nav-wrap{ flex-direction:column; align-items:flex-start; }
    .nav-dd{ width:100%; }
    .nav-dd-menu{
      position:static;
      display:block;
      margin-top:6px;
      box-shadow:none;
      border-radius:10px;
    }
  }
</style>
</head>
