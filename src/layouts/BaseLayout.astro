---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description?: string;
}
const { title, description = "Professional locksmith and safe services in North San Diego County. CA License LCO 6687. Call (619) 794-8355" } = Astro.props;
const fullTitle = `${title} | Safecracker`;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>{fullTitle}</title>
  <meta name="description" content={description}/>
</head>
<body class="bg-gray-50 text-gray-900">
  <Header/>
  <main>
    <slot/>
  </main>
  <Footer/>
</body>
</html>
