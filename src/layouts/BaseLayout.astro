---
const { title } = Astro.props;
const description = Astro.props.description || "Professional locksmith, safe, and gate automation services. CA License LCO 6687. Mobile service across 150-mile radius from Fallbrook, CA.";
const canonical = Astro.props.canonical || Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={'https://locks619.github.io/safecracker.com' + canonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={'https://locks619.github.io/safecracker.com' + canonical}>
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <style>
    /* Design System Variables */
    :root {
      --container-max: 1280px;
      --section-py: 5rem;
      --card-radius: 1rem;
      --shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    }
    /* Typography Scale */
    .text-display { font-size: 3.75rem; line-height: 1; font-weight: 900; }
    .text-h1 { font-size: 3rem; line-height: 1.1; font-weight: 900; }
    .text-h2 { font-size: 2.25rem; line-height: 1.2; font-weight: 800; }
    .text-h3 { font-size: 1.875rem; line-height: 1.3; font-weight: 700; }
    .text-body-lg { font-size: 1.25rem; line-height: 1.6; }
    .text-body { font-size: 1rem; line-height: 1.6; }
    /* Button System */
    .btn-primary {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      color: #1f2937;
      padding: 1rem 2rem;
      border-radius: 9999px;
      font-weight: 700;
      font-size: 1.125rem;
      transition: all 0.2s;
      box-shadow: var(--shadow-md);
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
      background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    }
    .btn-secondary {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: #1f2937;
      color: white;
      padding: 1rem 2rem;
      border-radius: 9999px;
      font-weight: 700;
      font-size: 1.125rem;
      transition: all 0.2s;
      box-shadow: var(--shadow-md);
    }
    .btn-secondary:hover {
      background: #374151;
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
    @media (max-width: 768px) {
      .text-display { font-size: 2.5rem; }
      .text-h1 { font-size: 2rem; }
      .text-h2 { font-size: 1.75rem; }
    }
  </style>
</head>
<body class="antialiased">
  <slot />
</body>
</html>
