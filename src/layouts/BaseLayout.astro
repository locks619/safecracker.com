---
const { title } = Astro.props;
const description = Astro.props.description || "Professional locksmith, safe, and gate automation services. CA License LCO 6687. Mobile service across 150-mile radius from Fallbrook, CA.";
const canonical = Astro.props.canonical || Astro.url.pathname;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={'https://locks619.github.io/safecracker.com' + canonical}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:url" content={'https://locks619.github.io/safecracker.com' + canonical}>
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <style>
    /* Design System Variables */
    :root {
  --font-heading: 'Libre Baskerville', serif;
  --font-body: 'Inter', system-ui, -apple-system, sans-serif;
  --container-max: 1280px;
  --section-py: 5rem;
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
}
    /* Typography Scale */
    .text-display { font-size: 3.75rem; line-height: 1; font-weight: 900; }
    .text-h1 { font-size: 3rem; line-height: 1.1; font-weight: 900; }
    .text-h2 { font-size: 2.25rem; line-height: 1.2; font-weight: 800; }
    .text-h3 { font-size: 1.875rem; line-height: 1.3; font-weight: 700; }
    .text-body-lg { font-size: 1.25rem; line-height: 1.6; }
    .text-body {
  margin: 0;
  padding: 0;
  background: #ffffff;
  color: #0b0b0b;
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  -webkit-font-smoothing: antialiased;
}
    /* Button System */
    .btn-primary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  background: #0b0b0b;
  color: #ffffff;
  font-weight: 700;
  border-radius: 0.5rem;
  transition: all 0.15s ease;
  text-decoration: none;
  border: 2px solid #0b0b0b;
}
.btn-primary:hover {
  background: #2d2d2d;
  border-color: #2d2d2d;
}
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
      background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    }
    .btn-secondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  background: #ffffff;
  color: #0b0b0b;
  font-weight: 600;
  border-radius: 0.5rem;
  transition: all 0.15s ease;
  text-decoration: none;
  border: 2px solid #e5e5e5;
}
.btn-secondary:hover {
  border-color: #0b0b0b;
}
    .btn-secondary:hover {
      background: #374151;
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
    @media (max-width: 768px) {
      .text-display { font-size: 2.5rem; }
      .text-h1 { font-size: 2rem; }
      .text-h2 { font-size: 1.75rem; }
    }
  </style>
</head>
<body class="antialiased">
  <slot />
</body>
</html>


