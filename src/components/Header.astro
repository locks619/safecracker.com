---
// Header Component
---

<header class="bg-gray-900 text-white sticky top-0 z-50 shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-12 h-12 bg-amber-500 rounded-lg flex items-center justify-center">
          <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
        <div>
          <div class="font-black text-xl group-hover:text-amber-400 transition-colors">SAFECRACKER</div>
          <div class="text-xs text-gray-400">CA License LCO 6687</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-gray-300 hover:text-amber-400 font-semibold transition-colors">
          Home
        </a>
        
        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="text-gray-300 hover:text-amber-400 font-semibold transition-colors flex items-center gap-1">
            Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-64 bg-gray-800 rounded-lg shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            <a href="/services/commercial-locksmith" class="block px-6 py-3 hover:bg-gray-700 rounded-t-lg">
              <div class="font-semibold text-white">Commercial Locksmith</div>
              <div class="text-sm text-gray-400">Master keys & access control</div>
            </a>
            <a href="/services/gate-automation" class="block px-6 py-3 hover:bg-gray-700">
              <div class="font-semibold text-white">Gate Automation</div>
              <div class="text-sm text-gray-400">Installation & welding</div>
            </a>
            <a href="/services/safe-vault" class="block px-6 py-3 hover:bg-gray-700 rounded-b-lg">
              <div class="font-semibold text-white">Safe & Vault</div>
              <div class="text-sm text-gray-400">Opening & maintenance</div>
            </a>
          </div>
        </div>

        <a href="/learning-center" class="text-gray-300 hover:text-amber-400 font-semibold transition-colors">
          Learning Center
        </a>
        
        <a href="/about" class="text-gray-300 hover:text-amber-400 font-semibold transition-colors">
          About
        </a>
        
        <a href="/contact" class="bg-amber-500 text-gray-900 px-6 py-2 rounded-full font-bold hover:bg-amber-400 transition-colors">
          Contact
        </a>
        
        <a href="tel:6197948355" class="flex items-center gap-2 text-amber-400 hover:text-amber-300 font-bold transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          (619) 794-8355
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden text-white">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-gray-800 border-t border-gray-700">
    <div class="container mx-auto px-4 py-4 space-y-2">
