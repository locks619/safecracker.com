---
// Minimal Google-style header
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <a href="/" class="flex items-center gap-2">
        <div class="font-black text-xl text-gray-950" style="font-weight: 900;"><span class="mobile-hide-brand">SAFECRACKER INC</span></div>
        <div class="hidden sm:block text-xs text-gray-600">CA License LCO 6687</div>
      </a>

      <!-- Desktop Navigation -->
      <style>@media (max-width: 768px) { .mobile-hide-brand { display: none !important; } }</style><nav class="hidden md:flex items-center gap-8">
        <a href="/" class="text-gray-700 hover:text-gray-950 font-medium transition-colors">Home</a>
        
        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="text-gray-700 hover:text-gray-950 font-medium transition-colors flex items-center gap-1">
            Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute top-full left-0 mt-2 w-64 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
            <a href="/services/commercial-locksmith" class="block px-6 py-3 hover:bg-gray-50 rounded-t-lg border-b border-gray-100">
              <div class="font-semibold text-gray-950">Commercial Locksmith</div>
              <div class="text-sm text-gray-600">Master keys & access control</div>
            </a>
            <a href="/services/gate-automation" class="block px-6 py-3 hover:bg-gray-50 border-b border-gray-100">
              <div class="font-semibold text-gray-950">Gate Automation</div>
              <div class="text-sm text-gray-600">Installation & welding</div>
            </a>
            <a href="/services/safe-vault" class="block px-6 py-3 hover:bg-gray-50 rounded-b-lg">
              <div class="font-semibold text-gray-950">Safe & Vault</div>
              <div class="text-sm text-gray-600">Opening & maintenance</div>
            </a>
          </div>
        </div>
        
        <a href="/contact" class="text-gray-700 hover:text-gray-950 font-medium transition-colors">Contact</a>
      </nav>

      <!-- Phone CTA (Desktop) -->
      <a href="tel:+16197948355" class="hidden md:flex items-center gap-2 px-6 py-3 bg-gray-950 text-white font-bold rounded-lg hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        (619) 794-8355
      </a>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden text-gray-950 p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
    <div class="container mx-auto px-4 py-3 space-y-2">
      <a href="/" class="block py-3 text-gray-700 hover:text-gray-950 font-medium">Home</a>
      <a href="/services/commercial-locksmith" class="block py-3 text-gray-700 hover:text-gray-950 font-medium">Commercial Locksmith</a>
      <a href="/services/gate-automation" class="block py-3 text-gray-700 hover:text-gray-950 font-medium">Gate Automation</a>
      <a href="/services/safe-vault" class="block py-3 text-gray-700 hover:text-gray-950 font-medium">Safe & Vault</a>
      <a href="/contact" class="block py-3 text-gray-700 hover:text-gray-950 font-medium">Contact</a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>


