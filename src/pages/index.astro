---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AntiScam from "../components/AntiScam.astro";
---

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Locksmith",
  "name": "Safecracker Locksmith & Safe Services",
  "image": "https://locks619.github.io/safecracker.com/logo.png",
  "telephone": "+1-619-794-8355",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Fallbrook",
    "addressRegion": "CA",
    "addressCountry": "US"
  },
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "33.3764",
      "longitude": "-117.2514"
    },
    "geoRadius": "241401"
  },
  "openingHours": "Mo-Su 00:00-23:59",
  "priceRange": "utf8",
  "additionalType": "https://schema.org/ProfessionalService",
  "hasCredential": "CA License LCO 6687"
}
</script>

<BaseLayout title="Professional Locksmith & Safe Services - Safecracker">
  <Header />

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-gray-900 to-slate-800">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 z-10 relative py-20">
      <div class="max-w-5xl mx-auto text-center text-white">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full mb-8">
          <span class="text-amber-400 font-bold">CA LICENSE LCO 6687</span>
        </div>
        
        <h1 class="text-display mb-6">
          Expert Locksmith &<br/>
          <span class="bg-gradient-to-r from-amber-400 via-yellow-400 to-amber-500 bg-clip-text text-transparent">
            Safe Services
          </span>
        </h1>
        
        <p class="text-body-lg text-gray-300 mb-12 max-w-2xl mx-auto">
          150-mile mobile service from Fallbrook, CA
        </p>

        <!-- Trust Badges Row -->
        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <div class="px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg">
            <div class="font-bold text-white">15+ Years</div>
            <div class="text-sm text-gray-400">Since 2010</div>
          </div>
          <div class="px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg">
            <div class="font-bold text-white">Women-Owned</div>
            <div class="text-sm text-gray-400">Certified</div>
          </div>
          <div class="px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg">
            <div class="font-bold text-white">Licensed</div>
            <div class="text-sm text-gray-400">LCO 6687</div>
          </div>
          <div class="px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg">
            <div class="font-bold text-white">24/7</div>
            <div class="text-sm text-gray-400">Emergency</div>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:6197948355" class="btn-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            (619) 794-8355
          </a>
          
          <a href="/contact" class="btn-secondary">
            Get Free Quote
          </a>
        </div>
      </div>
    </div>
  </section>

  <AntiScam />

  <!-- Services Section -->
  <section style="padding-top: var(--section-py); padding-bottom: var(--section-py);" class="bg-white">
    <div class="container mx-auto px-4" style="max-width: var(--container-max);">
      <div class="text-center mb-16">
        <h2 class="text-h1 text-gray-900 mb-4">Expert Services</h2>
        <div class="w-20 h-1 bg-gradient-to-r from-amber-500 to-yellow-600 mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <a href="/services/commercial-locksmith" class="group block bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2" style="box-shadow: var(--shadow-md);">
          <div class="aspect-[4/3] overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1582139329536-e7284fece509?q=80&w=800" 
              alt="Commercial Locksmith"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <div class="p-6">
            <h3 class="text-h3 mb-3">Commercial Locksmith</h3>
            <p class="text-gray-600 mb-4">Master key systems, access control, high-security locks</p>
            <span class="text-amber-600 font-semibold flex items-center gap-2">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>

        <a href="/services/gate-automation" class="group block bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2" style="box-shadow: var(--shadow-md);">
          <div class="aspect-[4/3] overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?q=80&w=800" 
              alt="Gate Automation"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <div class="p-6">
            <h3 class="text-h3 mb-3">Gate Automation</h3>
            <p class="text-gray-600 mb-4">Installation, repair, mobile welding services</p>
            <span class="text-amber-600 font-semibold flex items-center gap-2">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>

        <a href="/services/safe-vault" class="group block bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2" style="box-shadow: var(--shadow-md);">
          <div class="aspect-[4/3] overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1633613286991-611fe299c4be?q=80&w=800" 
              alt="Safe & Vault"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
          </div>
          <div class="p-6">
            <h3 class="text-h3 mb-3">Safe & Vault</h3>
            <p class="text-gray-600 mb-4">Opening, combination changes, maintenance</p>
            <span class="text-amber-600 font-semibold flex items-center gap-2">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Mid-Page CTA -->
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4 max-w-4xl text-center">
      <h2 class="text-h2 text-white mb-4">Need Service Now?</h2>
      <p class="text-body-lg text-gray-300 mb-8">Licensed • Background-Checked • Honest Pricing</p>
      <a href="tel:6197948355" class="btn-primary">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        (619) 794-8355
      </a>
    </div>
  </section>

  <!-- Service Area -->
  <section style="padding-top: var(--section-py); padding-bottom: var(--section-py);" class="bg-gray-50">
    <div class="container mx-auto px-4" style="max-width: var(--container-max);">
      <div class="text-center mb-12">
        <h2 class="text-h1 text-gray-900 mb-4">Serving Southern California</h2>
        <div class="w-20 h-1 bg-gradient-to-r from-amber-500 to-yellow-600 mx-auto mb-6"></div>
        <p class="text-body-lg text-gray-600">150-mile radius from Fallbrook, CA</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 max-w-3xl mx-auto">
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          San Diego County
        </div>
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          Riverside County
        </div>
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          Orange County
        </div>
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          Imperial County
        </div>
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          Los Angeles County
        </div>
        <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-sm border-l-4 border-amber-500">
          San Bernardino County
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="relative py-20 overflow-hidden bg-gradient-to-br from-amber-500 via-yellow-500 to-amber-600">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, black 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-h1 text-gray-900 mb-6">Need Emergency Service?</h2>
        <p class="text-body-lg text-gray-800 mb-10 font-medium">24/7 mobile service • 150-mile radius</p>
        <a href="tel:6197948355" class="inline-flex items-center gap-4 bg-gray-900 text-white px-12 py-6 rounded-full text-xl font-bold hover:bg-gray-800 transition-all shadow-2xl">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call (619) 794-8355
        </a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

