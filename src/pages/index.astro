---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Safecracker Inc - Licensed Locksmith & Safe Services" description="Professional locksmith and safe services in Southern California. CA License LCO 6687. Call, text, or email us today.">
  <Header />

  <!-- Hero Section - Google Clean -->
  <section class="bg-white">
    <div class="container mx-auto px-4 py-20 max-w-5xl">
      <!-- Brand -->
      <div class="text-center mb-12">
        <h1 class="text-6xl md:text-7xl font-black text-gray-950 mb-4" style="font-weight: 900;">
          SAFECRACKER INC
        </h1>
        <p class="text-2xl text-gray-600 font-medium">
          Licensed Locksmith & Safe Services
        </p>
      </div>

      <!-- Phone Screamer -->
      <div class="text-center mb-16">
        <a href="tel:+16197948355" class="text-5xl md:text-6xl font-black text-gray-950 hover:text-gray-700 transition-colors block mb-8" style="font-weight: 900;">
          (619) 794-8355
        </a>
        
        <!-- Primary Actions -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-2xl mx-auto">
          <a href="tel:+16197948355" class="btn-primary px-10 py-5 text-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call Now
          </a>
          
          <a href="sms:+16197948355" class="btn-secondary px-10 py-5 text-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
            Text Us
          </a>
          
          <a href="/contact" class="btn-secondary px-10 py-5 text-lg">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Email + Photos
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Tree -->
  <section class="bg-white border-t border-gray-200">
    <div class="container mx-auto px-4 py-20 max-w-5xl">
      <h2 class="text-4xl md:text-5xl font-black text-gray-950 text-center mb-16" style="font-weight: 900;">
        What do you need help with?
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        <!-- Locked Out -->
        <a href="/services/commercial-locksmith" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Locked Out</h3>
          </div>
        </a>

        <!-- Safes & Vaults -->
        <a href="/services/safe-vault" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Safes & Vaults</h3>
          </div>
        </a>

        <!-- Commercial Locks & Doors -->
        <a href="/services/commercial-locksmith" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Commercial Locks & Doors</h3>
          </div>
        </a>

        <!-- Gates & Access Control -->
        <a href="/services/gate-automation" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Gates & Access Control</h3>
          </div>
        </a>

        <!-- Not Sure / Other -->
        <a href="/contact" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all sm:col-span-2 lg:col-span-1">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Not Sure / Other</h3>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Mobile Sticky Bar -->
  <div class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t-2 border-gray-950 z-50">
    <div class="grid grid-cols-3 gap-px bg-gray-200">
      <a href="tel:+16197948355" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Call</span>
      </a>
      
      <a href="sms:+16197948355" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Text</span>
      </a>
      
      <a href="/contact" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Email</span>
      </a>
    </div>
  </div>

  <Footer />
</BaseLayout>

