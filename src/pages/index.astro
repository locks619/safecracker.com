---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Safecracker Inc - Licensed Locksmith & Safe Services" description="Professional locksmith and safe services in Southern California. CA License LCO 6687. Call, text, or email us today.">
  <Header />

  <!-- Hero Section with Dual Watermark System -->
  <section class="bg-white relative min-h-screen sm:min-h-0" style="overflow: visible;">
    <!-- LAYER A: Blueprint Grid Watermark -->
    <div class="absolute inset-0 z-0 pointer-events-none" style="background: repeating-linear-gradient(to right, rgba(2,6,23,0.12) 0 1px, transparent 1px 48px), repeating-linear-gradient(to bottom, rgba(2,6,23,0.12) 0 1px, transparent 1px 48px);"></div>
    
    <!-- LAYER B: Safe Door Blueprint Watermark -->
    <div class="absolute inset-0 z-0 flex items-center justify-end pointer-events-none" style="opacity: 0.15; transform: translateX(10%) translateY(-5%);">
      <svg width="800" height="1000" viewBox="0 0 800 1000" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-gray-950 w-[120vw] sm:w-[900px] max-w-none">
        <rect x="100" y="50" width="600" height="900" stroke="currentColor" stroke-width="4" fill="none"/>
        <rect x="120" y="70" width="560" height="860" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="80" y="150" width="60" height="80" stroke="currentColor" stroke-width="3" fill="none"/>
        <circle cx="110" cy="190" r="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="80" y="400" width="60" height="80" stroke="currentColor" stroke-width="3" fill="none"/>
        <circle cx="110" cy="440" r="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="80" y="650" width="60" height="80" stroke="currentColor" stroke-width="3" fill="none"/>
        <circle cx="110" cy="690" r="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <circle cx="400" cy="500" r="120" stroke="currentColor" stroke-width="4" fill="none"/>
        <circle cx="400" cy="500" r="100" stroke="currentColor" stroke-width="2" fill="none"/>
        <circle cx="400" cy="500" r="80" stroke="currentColor" stroke-width="2" fill="none"/>
        <line x1="400" y1="380" x2="400" y2="395" stroke="currentColor" stroke-width="3"/>
        <line x1="400" y1="605" x2="400" y2="620" stroke="currentColor" stroke-width="3"/>
        <line x1="280" y1="500" x2="295" y2="500" stroke="currentColor" stroke-width="3"/>
        <line x1="505" y1="500" x2="520" y2="500" stroke="currentColor" stroke-width="3"/>
        <polygon points="400,420 395,440 405,440" fill="currentColor"/>
        <rect x="500" y="480" width="120" height="40" rx="5" stroke="currentColor" stroke-width="3" fill="none"/>
        <circle cx="580" cy="500" r="12" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="690" y="200" width="30" height="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="690" y="350" width="30" height="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="690" y="500" width="30" height="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="690" y="650" width="30" height="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <rect x="690" y="800" width="30" height="15" stroke="currentColor" stroke-width="2" fill="none"/>
        <line x1="100" y1="30" x2="700" y2="30" stroke="currentColor" stroke-width="1" stroke-dasharray="5,5"/>
        <line x1="100" y1="30" x2="100" y2="40" stroke="currentColor" stroke-width="1"/>
        <line x1="700" y1="30" x2="700" y2="40" stroke="currentColor" stroke-width="1"/>
        <line x1="200" y1="50" x2="200" y2="950" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
        <line x1="300" y1="50" x2="300" y2="950" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
        <line x1="400" y1="50" x2="400" y2="950" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
        <line x1="500" y1="50" x2="500" y2="950" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
        <line x1="600" y1="50" x2="600" y2="950" stroke="currentColor" stroke-width="0.5" opacity="0.3"/>
      </svg>
    </div>

    <!-- Content wrapper (z-10 to sit above watermarks) -->
    <div class="container mx-auto px-4 py-20 max-w-5xl relative z-10">
      <div class="text-center mb-12">
        <h1 class="text-center leading-[0.95] tracking-tight mb-6" style="font-size: clamp(2.6rem, 6vw, 5rem); font-family: 'Cormorant Garamond', serif; font-weight: 600;" style="font-family: 'Cormorant Garamond', serif; font-weight: 700;">
          Safecracker Inc
        </h1>
        <p class="text-center mt-8 text-slate-600" style="font-size: clamp(1rem, 2vw, 1.25rem); letter-spacing: 0.12em; font-family: 'Cormorant Garamond', serif; font-weight: 400;" style="font-family: 'Cormorant Garamond', serif; font-weight: 400;">
          Licensed Locksmith & Safe Services
        </p>
      </div>

      <div class="text-center mb-12">
        <a href="tel:+16197948355" class="block text-center text-slate-900 hover:text-slate-700 transition-colors" style="font-size: clamp(1.8rem, 3.5vw, 2.7rem); font-family: 'Cormorant Garamond', serif; font-weight: 600; letter-spacing: -0.02em;" style="font-family: 'Cormorant Garamond', serif; font-weight: 700;">
          (619) 794-8355
        </a>
      </div>

      <div class="max-w-md mx-auto bg-white border-2 border-slate-200 rounded-xl overflow-hidden mt-16" style="box-shadow: 0 4px 16px rgba(0,0,0,0.06);">
        <a href="tel:+16197948355" class="flex items-center justify-center gap-4 py-6 hover:bg-gray-50 transition-colors border-b border-gray-200">
          <svg class="w-5 h-5 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span class="text-lg text-gray-950" style="font-family: 'Cormorant Garamond', serif; font-weight: 500;">Call Now</span>
        </a>
        
        <a href="sms:+16197948355" class="flex items-center justify-center gap-4 py-6 hover:bg-gray-50 transition-colors border-b border-gray-200">
          <svg class="w-5 h-5 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
          </svg>
          <span class="text-lg text-gray-950" style="font-family: 'Cormorant Garamond', serif; font-weight: 500;">Text Us</span>
        </a>
        
        <a href="/contact" class="flex items-center justify-center gap-4 py-6 hover:bg-gray-50 transition-colors">
          <svg class="w-5 h-5 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span class="text-lg text-gray-950" style="font-family: 'Cormorant Garamond', serif; font-weight: 500;">Email + Photos</span>
        </a>
      </div>
    </div>
  </section>

  <section class="bg-white border-t border-gray-200">
    <div class="container mx-auto px-4 py-20 max-w-5xl">
      <h2 class="text-4xl md:text-5xl text-gray-950 text-center mb-16" style="font-family: 'Cormorant Garamond', serif; font-weight: 700;">
        What do you need help with?
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-4xl mx-auto">
        <a href="/services/commercial-locksmith" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Locked Out</h3>
          </div>
        </a>

        <a href="/services/safe-vault" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Safes & Vaults</h3>
          </div>
        </a>

        <a href="/services/commercial-locksmith" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Commercial Locks & Doors</h3>
          </div>
        </a>

        <a href="/services/gate-automation" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Gates & Access Control</h3>
          </div>
        </a>

        <a href="/contact" class="group block p-8 border-2 border-gray-200 rounded-lg hover:border-gray-950 transition-all sm:col-span-2 lg:col-span-1">
          <div class="text-center">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-xl font-bold text-gray-950">Not Sure / Other</h3>
          </div>
        </a>
      </div>
    </div>
  </section>

  <div class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t-2 border-gray-950 z-50">
    <div class="grid grid-cols-3 gap-px bg-gray-200">
      <a href="tel:+16197948355" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Call</span>
      </a>
      
      <a href="sms:+16197948355" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Text</span>
      </a>
      
      <a href="/contact" class="bg-white py-6 text-center hover:bg-gray-50">
        <svg class="w-6 h-6 mx-auto mb-1 text-gray-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="text-xs font-bold text-gray-950">Email</span>
      </a>
    </div>
  </div>

  <Footer />
</BaseLayout>


