<style>
@import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap');

.mobile-priority {
  background: #fff;
  padding: 64px 28px 72px;
  text-align: center;
  font-family: "Libre Baskerville", Georgia, "Times New Roman", serif;
  min-height: 85vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.mobile-priority h1 {
  font-size: 38px;
  font-weight: 700;
  color: #000;
  margin: 0 0 8px 0;
  letter-spacing: 0;
  line-height: 1.2;
}
.mobile-priority .tagline {
  font-size: 18px;
  font-weight: 400;
  color: #000;
  margin: 0 0 56px 0;
  line-height: 1.5;
}
.mobile-priority .phone {
  font-size: 34px;
  font-weight: 700;
  color: #000;
  margin: 0 0 64px 0;
  display: block;
  text-decoration: none;
  line-height: 1.3;
}
.mobile-priority .ctas {
  display: flex;
  flex-direction: column;
  gap: 28px;
  max-width: 400px;
  margin: 0 auto;
}
.mobile-priority .ctas a {
  display: block;
  padding: 18px;
  min-height: 60px;
  font-size: 21px;
  font-weight: 400;
  color: #000;
  text-decoration: none;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  transition: opacity 0.2s;
}
.mobile-priority .ctas a:active {
  opacity: 0.5;
}
</style>

