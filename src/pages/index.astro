---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <Header />

  <section class="hero-test">
    <div class="hero-test-inner">
      <div class="hero-test-image">
        <img src="/hero/phones.webp" alt="Safecracker on phone" />
      </div>
      <div class="hero-test-content">
        <h1>Safecracker Inc</h1>
        <p>Licensed Locksmith & Safe Services</p>
        <p>(619) 794-8355</p>
        <div class="actions">
          <a href="tel:16197948355">Call Now</a>
          <a href="sms:16197948355">Text Us</a>
          <a href="/contact">Email</a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style data-hero-test>
  .hero-test{
    background:#ffffff;
    padding:96px 32px;
    position:relative;
  }

  .hero-test-inner{
    max-width:1240px;
    margin:0 auto;
    display:grid;
    grid-template-columns:45% 55%;
    gap:60px;
    align-items:center;
  }

  .hero-test-image img{
    max-width:480px;
    width:100%;
    height:auto;
    display:block;
    filter:drop-shadow(0 8px 24px rgba(0,0,0,.18));
  }

  .hero-test-content{ color:#0b0f14; }

  .hero-test-content h1{
    color:#0b0f14;
    font-size:clamp(40px,4vw,64px);
    font-weight:600;
    letter-spacing:-0.02em;
    line-height:1.1;
    margin:0 0 16px;
  }

  .hero-test-content p{
    color:#1f2937;
    font-size:18px;
    line-height:1.6;
    margin:0 0 8px;
  }

  .hero-test-content p:nth-of-type(2){
    font-size:20px;
    font-weight:600;
    color:#0b0f14;
    margin:0 0 32px;
  }

  .actions{
    display:flex;
    gap:12px;
    flex-wrap:wrap;
  }

  .actions a{
    display:inline-block;
    padding:14px 28px;
    border-radius:12px;
    text-decoration:none;
    font-weight:600;
  }

  .actions a:nth-child(1){
    background:#0b0f14;
    color:#ffffff;
  }

  .actions a:nth-child(2),
  .actions a:nth-child(3){
    background:transparent;
    border:2px solid rgba(0,0,0,.18);
    color:#0b0f14;
  }

  @media (max-width: 900px){
    .hero-test{ padding:44px 20px; }

    .hero-test-inner{
      grid-template-columns:1fr;
      gap:22px;
      text-align:center;
      align-items:start;
    }

    .hero-test-image{ order:-1; }

    .hero-test-image img{
      margin:0 auto;
      max-width:360px;
      width:88vw;
    }

    .hero-test-content h1{ margin-top:6px; }

    .actions{
      flex-direction:column;
      gap:10px;
    }

    .actions a{
      width:100%;
      text-align:center;
    }
  }
</style>




