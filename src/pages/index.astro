---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout>
  <Header />
<style>
@import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap');

.mobile-priority {
  background: #fff;
  padding: 64px 28px 72px;
  text-align: center;
  font-family: "Libre Baskerville", Georgia, "Times New Roman", serif;
  min-height: 85vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.mobile-priority h1 {
  font-size: 38px;
  font-weight: 700;
  color: #000;
  margin: 0 0 8px 0;
  letter-spacing: 0;
  line-height: 1.2;
}
.mobile-priority .tagline {
  font-size: 18px;
  font-weight: 400;
  color: #000;
  margin: 0 0 56px 0;
  line-height: 1.5;
}
.mobile-priority .phone {
  font-size: 34px;
  font-weight: 700;
  color: #000;
  margin: 0 0 64px 0;
  display: block;
  text-decoration: none;
  line-height: 1.3;
}
.mobile-priority .ctas {
  display: flex;
  flex-direction: column;
  gap: 28px;
  max-width: 400px;
  margin: 0 auto;
}
.mobile-priority .ctas a {
  display: block;
  padding: 18px;
  min-height: 60px;
  font-size: 21px;
  font-weight: 400;
  color: #000;
  text-decoration: none;
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  transition: opacity 0.2s;
}
.mobile-priority .ctas a:active {
  opacity: 0.5;
}
</style>

<section class="mobile-priority">
  <h1>SafeCracker Inc</h1>
  <p class="tagline">Licensed Locksmith & Safe Services</p>
  
  <a href="tel:6197948355" class="phone">(619) 794-8355</a>
  
  <div class="ctas">
    <a href="tel:6197948355">Call Now</a>
    <a href="sms:6197948355">Text Us</a>
    <a href="mailto:info@safecrackerinc.com">Email + Photos</a>
  </div>


<!-- DESKTOP TRUST LAYER WITH PROGRESSIVE DISCLOSURE (md+ only) -->
<style>
.desktop-trust {
  display: none;
}

@media (min-width: 768px) {
  .mobile-priority {
    display: none;
  }
  
  .desktop-trust {
    display: block;
    background: #fff;
    font-family: "Libre Baskerville", Georgia, "Times New Roman", serif;
  }
  
  .desktop-hero {
    max-width: 1240px;
    margin: 0 auto;
    padding: 80px 40px 60px;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 80px;
    align-items: start;
  }
  
  .hero-left h1 {
    font-size: 52px;
    font-weight: 700;
    color: #000;
    margin: 0 0 16px 0;
    line-height: 1.1;
    letter-spacing: -0.01em;
  }
  
  .hero-left .subline {
    font-size: 20px;
    color: #555;
    margin: 0 0 28px 0;
  }
  
  .hero-left .license {
    font-size: 16px;
    color: #666;
    margin: 0 0 32px 0;
  }
  
.trust-card {
    background: #fafafa;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 40px 32px;
  }
  
  .trust-card .reviews {
    font-size: 18px;
    color: #000;
    margin-bottom: 24px;
    font-weight: 600;
  }
  
  .trust-card .service-area {
    font-size: 15px;
    color: #555;
    margin-bottom: 24px;
    line-height: 1.8;
  }
  
  .trust-card .info-line {
    font-size: 15px;
    color: #555;
    margin-bottom: 12px;
    line-height: 1.6;
  }
  
  .trust-card .ctas {
    margin-top: 32px;
    padding-top: 28px;
    border-top: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .trust-card .ctas a {
    display: block;
    font-size: 17px;
    color: #000;
    text-decoration: none;
    text-align: center;
    padding: 12px;
  }
  
  .trust-card .ctas a:hover {
    opacity: 0.6;
  }
  
  .proof-bar {
    background: #f8f8f8;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    padding: 28px 40px;
  }
  
  .proof-bar-inner {
    max-width: 1240px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 24px;
  }
  
  .proof-item {
    text-align: center;
    font-size: 13px;
    color: #555;
    line-height: 1.6;
  }
  
  .proof-item strong {
    display: block;
    font-size: 15px;
    font-weight: 700;
    color: #000;
    margin-bottom: 6px;
  }
  
  .services-grid {
    max-width: 1240px;
    margin: 0 auto;
    padding: 80px 40px;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }
  
  .service-card {
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 40px 28px;
    text-align: center;
    text-decoration: none;
    color: #000;
    transition: border-color 0.2s;
  }
  
  .service-card:hover {
    border-color: #999;
  }
  
  .service-card h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.2;
  }
  
  .service-card p {
    font-size: 15px;
    color: #666;
    line-height: 1.7;
  }
  
  /* PROGRESSIVE DISCLOSURE */
  .disclosure-controls {
    max-width: 1240px;
    margin: 0 auto;
    padding: 40px 40px 20px;
    display: flex;
    gap: 32px;
    justify-content: center;
  }
  
  .disclosure-controls button {
    background: transparent;
    border: 2px solid #e0e0e0;
    padding: 12px 24px;
    font-size: 15px;
    font-family: "Libre Baskerville", Georgia, "Times New Roman", serif;
    color: #000;
    cursor: pointer;
    border-radius: 8px;
    transition: border-color 0.2s;
  }
  
  .disclosure-controls button:hover {
    border-color: #999;
  }
  
  .disclosure-panel {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 40px 40px;
    display: none;
  }
  
  .disclosure-panel.active {
    display: block;
  }
  
  .disclosure-panel-content {
    background: #fafafa;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 40px;
  }
  
  .disclosure-panel h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 20px;
  }
  
  .disclosure-panel p {
    font-size: 15px;
    line-height: 1.7;
    color: #555;
    margin-bottom: 16px;
  }
  
  .disclosure-panel ul {
    list-style: none;
    padding: 0;
  }
  
  .disclosure-panel ul li {
    font-size: 15px;
    color: #555;
    margin-bottom: 12px;
    padding-left: 20px;
    position: relative;
  }
  
  .disclosure-panel ul li:before {
    content: "✓";
    position: absolute;
    left: 0;
    font-weight: 700;
  }
}
</style>

<section class="desktop-trust">
  <div class="desktop-hero">
    <div class="hero-left">
      <h1>SafeCracker Inc</h1>
      <p class="subline">Licensed • Insured • Mobile Locksmith & Safe Services</p>
      <p class="license">CA License LCO 6687</p>
    </div>
    
    <div class="trust-card">
      <div class="reviews">★★★★★ Google Reviews (4.9)</div>
      
      <div class="service-area">
        Vista · Oceanside · Carlsbad · San Marcos · Encinitas
      </div>
      
      <div class="info-line">Available 7 days/week</div>
      <div class="info-line">90-day service warranty</div>
      
      <div class="ctas">
        <a href="tel:6197948355">Call Now</a>
        <a href="sms:6197948355">Text Us</a>
        <a href="mailto:info@safecrackerinc.com">Email + Photos</a>
      </div>
    </div>
  </div>
  
  <div class="proof-bar">
    <div class="proof-bar-inner">
      <div class="proof-item">
        <strong>Licensed</strong>
        CA LCO 6687
      </div>
      <div class="proof-item">
        <strong>Insured</strong>
        Fully bonded
      </div>
      <div class="proof-item">
        <strong>Warranty</strong>
        90-day service
      </div>
      <div class="proof-item">
        <strong>Payments</strong>
        Cash • Card
      </div>
      <div class="proof-item">
        <strong>Vetted</strong>
        Background checks
      </div>
      <div class="proof-item">
        <strong>Mobile</strong>
        We come to you
      </div>
    </div>
  </div>
  
  <div class="services-grid">
    <a href="/services/safe-vault" class="service-card">
      <h3>Safes & Vaults</h3>
      <p>Opening, repair, installation, and combination changes</p>
    </a>
    
    <a href="/services/commercial-locksmith" class="service-card">
      <h3>Commercial</h3>
      <p>Access control, master keys, door hardware, panic bars</p>
    </a>
    
    <a href="/services/commercial-locksmith" class="service-card">
      <h3>Residential & Auto</h3>
      <p>Lockouts, rekeying, lock upgrades, car key services</p>
    </a>
  </div>
  
  <!-- PROGRESSIVE DISCLOSURE CONTROLS -->
  <div class="disclosure-controls">
    <button onclick="togglePanel('reviews')">View Reviews</button>
    <button onclick="togglePanel('coverage')">Service Coverage Map</button>
    <button onclick="togglePanel('credentials')">Credentials & Licensing</button>
  </div>
  
  <!-- COLLAPSIBLE PANELS -->
  <div id="panel-reviews" class="disclosure-panel">
    <div class="disclosure-panel-content">
      <h3>Customer Reviews</h3>
      <p>★★★★★ 4.9/5 average rating on Google Reviews</p>
      <p>SafeCracker Inc maintains consistently high ratings for professional locksmith and safe services across San Diego, Riverside, and Orange Counties.</p>
    </div>
  </div>
  
  <div id="panel-coverage" class="disclosure-panel">
    <div class="disclosure-panel-content">
      <h3>Service Coverage</h3>
      <p><strong>100-Mile Radius from Fallbrook, CA</strong></p>
      <p>Serving San Diego, Riverside, and Orange Counties</p>
      <ul>
        <li><a href="/service-areas/vista" style="color: #000; text-decoration: none;">Vista</a></li>
        <li><a href="/service-areas/oceanside" style="color: #000; text-decoration: none;">Oceanside</a></li>
        <li><a href="/service-areas/carlsbad" style="color: #000; text-decoration: none;">Carlsbad</a></li>
        <li><a href="/service-areas/san-marcos" style="color: #000; text-decoration: none;">San Marcos</a></li>
        <li><a href="/service-areas/encinitas" style="color: #000; text-decoration: none;">Encinitas</a></li>
      </ul>
      <p><a href="/service-areas" style="color: #000; font-weight: 600;">View all service areas →</a></p>
    </div>
  </div>
  
  <div id="panel-credentials" class="disclosure-panel">
    <div class="disclosure-panel-content">
      <h3>Credentials & Licensing</h3>
      <ul>
        <li>CA Locksmith License LCO 6687</li>
        <li>Women-Owned Business</li>
        <li>Fully Insured & Bonded</li>
        <li>Background-Checked Technicians</li>
        <li>Serving Since 2010</li>
        <li>90-Day Service Warranty</li>
      </ul>
    </div>
  </div>
  
  <script>
    function togglePanel(panelId) {
      const panels = document.querySelectorAll('.disclosure-panel');
      const targetPanel = document.getElementById('panel-' + panelId);
      
      panels.forEach(panel => {
        if (panel === targetPanel) {
          panel.classList.toggle('active');
        } else {
          panel.classList.remove('active');
        }
      });
    }
  </script>
</section><Footer />
</BaseLayout>

<style data-hero-test>
  /* Base */
  .hero-test{
    background:#ffffff;
    position:relative;
  }

  .hero-test-inner{
    max-width:1240px;
    margin:0 auto;
    display:grid;
    align-items:start;
  }

  .hero-test-image img{
    width:100%;
    height:auto;
    display:block;
    filter:drop-shadow(0 8px 24px rgba(0,0,0,.12));
  }

  .hero-test-content h1{
    color:#0b0f14;
    font-size:clamp(34px, 8vw, 52px);
    font-weight:650;
    letter-spacing:-0.02em;
    line-height:1.05;
    margin:0 0 10px;
  }

  .hero-test-content p{
    color:#1f2937;
    font-size:16px;
    line-height:1.45;
    margin:0 0 8px;
  }

  .hero-test-content p:nth-of-type(2){
    font-size:18px;
    font-weight:650;
    color:#0b0f14;
    margin:0 0 18px;
  }

  .actions{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
  }

  .actions a{
    display:inline-block;
    padding:14px 18px;
    border-radius:12px;
    text-decoration:none;
    font-weight:650;
    line-height:1;
  }

  .actions a:nth-child(1){
    background:#0b0f14;
    color:#ffffff;
  }

  .actions a:nth-child(2),
  .actions a:nth-child(3){
    background:transparent;
    border:2px solid rgba(0,0,0,.18);
    color:#0b0f14;
  }

  /* PHONE FIRST: lock it to top, remove dead space, make CTAs visible */
  @media (max-width: 900px){
    .hero-test{
      padding:22px 16px 26px;
      min-height:auto;
    }

    .hero-test-inner{
      grid-template-columns:1fr;
      gap:14px;
      text-align:center;
      align-content:start;
      justify-items:center;
    }

    .hero-test-image{
      order:-1;
      width:100%;
    }

    .hero-test-image img{
      max-width:330px;
      width:86vw;
      margin:0 auto;
    }

    .hero-test-content{
      width:100%;
      max-width:520px;
      padding:0 4px;
    }

    .actions{
      flex-direction:column;
      width:100%;
      gap:10px;
      margin-top:6px;
    }

    .actions a{
      width:100%;
      text-align:center;
    }
  }

  /* Desktop rules can exist later — we’ll tune after mobile is perfect */
  @media (min-width: 901px){
    .hero-test{
      padding:96px 32px;
    }
    .hero-test-inner{
      grid-template-columns:45% 55%;
      gap:60px;
      align-items:center;
    }
    .hero-test-image img{
      max-width:480px;
    }
  }
</style>















