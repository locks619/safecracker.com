<style data-hero-test>
  /* Base */
  .hero-test{
    background:#ffffff;
    position:relative;
  }

  .hero-test-inner{
    max-width:1240px;
    margin:0 auto;
    display:grid;
    align-items:start;
  }

  .hero-test-image img{
    width:100%;
    height:auto;
    display:block;
    filter:drop-shadow(0 8px 24px rgba(0,0,0,.12));
  }

  .hero-test-content h1{
    color:#0b0f14;
    font-size:clamp(34px, 8vw, 52px);
    font-weight:650;
    letter-spacing:-0.02em;
    line-height:1.05;
    margin:0 0 10px;
  }

  .hero-test-content p{
    color:#1f2937;
    font-size:16px;
    line-height:1.45;
    margin:0 0 8px;
  }

  .hero-test-content p:nth-of-type(2){
    font-size:18px;
    font-weight:650;
    color:#0b0f14;
    margin:0 0 18px;
  }

  .actions{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
  }

  .actions a{
    display:inline-block;
    padding:14px 18px;
    border-radius:12px;
    text-decoration:none;
    font-weight:650;
    line-height:1;
  }

  .actions a:nth-child(1){
    background:#0b0f14;
    color:#ffffff;
  }

  .actions a:nth-child(2),
  .actions a:nth-child(3){
    background:transparent;
    border:2px solid rgba(0,0,0,.18);
    color:#0b0f14;
  }

  /* PHONE FIRST: lock it to top, remove dead space, make CTAs visible */
  @media (max-width: 900px){
    .hero-test{
      padding:22px 16px 26px;
      min-height:auto;
    }

    .hero-test-inner{
      grid-template-columns:1fr;
      gap:14px;
      text-align:center;
      align-content:start;
      justify-items:center;
    }

    .hero-test-image{
      order:-1;
      width:100%;
    }

    .hero-test-image img{
      max-width:330px;
      width:86vw;
      margin:0 auto;
    }

    .hero-test-content{
      width:100%;
      max-width:520px;
      padding:0 4px;
    }

    .actions{
      flex-direction:column;
      width:100%;
      gap:10px;
      margin-top:6px;
    }

    .actions a{
      width:100%;
      text-align:center;
    }
  }

  /* Desktop rules can exist later — we’ll tune after mobile is perfect */
  @media (min-width: 901px){
    .hero-test{
      padding:96px 32px;
    }
    .hero-test-inner{
      grid-template-columns:45% 55%;
      gap:60px;
      align-items:center;
    }
    .hero-test-image img{
      max-width:480px;
    }
  }
</style>











