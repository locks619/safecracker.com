---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceCard from "../components/ServiceCard.astro";
---

<BaseLayout title="Professional Locksmith & Safe Services - Safecracker">
  <!-- Hero Section with Background Image -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/95 via-slate-800/90 to-amber-900/85 z-10"></div>
      <!-- Using Unsplash placeholder - replace with actual safe/lock image -->
      <img 
        src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?q=80&w=2000" 
        alt="Professional Safe and Locksmith Services"
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Hero Content -->
    <div class="container mx-auto px-4 z-20 relative">
      <div class="max-w-5xl mx-auto text-center text-white">
        <div class="inline-block mb-4 px-6 py-2 bg-amber-500/20 backdrop-blur-sm border border-amber-400/30 rounded-full">
          <p class="text-amber-400 font-semibold tracking-wide">CA LICENSE LCO 6687 â€¢ 24/7 EMERGENCY SERVICE</p>
        </div>
        
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-black mb-6 leading-tight tracking-tight">
          Professional<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 via-yellow-500 to-amber-600">
            Locksmith & Safe
          </span><br/>
          Services
        </h1>
        
        <p class="text-2xl md:text-3xl text-gray-300 mb-12 font-light">
          Serving 150-Mile Radius from Fallbrook, California
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a 
            href="tel:6197948355" 
            class="group bg-gradient-to-r from-amber-500 to-yellow-600 text-gray-900 px-10 py-5 rounded-full text-xl font-bold hover:from-amber-400 hover:to-yellow-500 transition-all duration-300 shadow-2xl hover:shadow-amber-500/50 hover:scale-105 flex items-center gap-3"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call (619) 794-8355
          </a>
          
          <a 
            href="/contact" 
            class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 px-10 py-5 rounded-full text-xl font-bold hover:bg-white/20 transition-all duration-300 hover:scale-105"
          >
            Get Free Quote
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
          Expert Services
        </h2>
        <div class="w-24 h-1.5 bg-gradient-to-r from-amber-500 to-yellow-600 mx-auto mb-6"></div>
        <p class="text-2xl text-gray-600 max-w-3xl mx-auto font-light">
          Comprehensive security solutions across Southern California
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <!-- Commercial Locksmith Card -->
        <div class="group bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="relative h-64 overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1582139329536-e7284fece509?q=80&w=800" 
              alt="Commercial Locksmith Services"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <div class="w-14 h-14 bg-amber-500 rounded-xl flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Commercial Locksmith</h3>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Master key systems, access control, high-security locks, and commercial lock repair for businesses.
            </p>
            <a href="/services/commercial-locksmith" class="inline-flex items-center gap-2 text-amber-600 font-semibold hover:gap-4 transition-all">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Gate Automation Card -->
        <div class="group bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="relative h-64 overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?q=80&w=800" 
              alt="Gate Automation and Welding Services"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <div class="w-14 h-14 bg-amber-500 rounded-xl flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Gate Automation & Welding</h3>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Automatic gate installation, repair, and mobile welding services for residential and commercial properties.
            </p>
            <a href="/services/gate-automation" class="inline-flex items-center gap-2 text-amber-600 font-semibold hover:gap-4 transition-all">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Safe & Vault Card -->
        <div class="group bg-white rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2">
          <div class="relative h-64 overflow-hidden">
            <img 
              src="https://images.unsplash.com/photo-1633613286991-611fe299c4be?q=80&w=800" 
              alt="Safe and Vault Services"
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent"></div>
            <div class="absolute bottom-4 left-4">
              <div class="w-14 h-14 bg-amber-500 rounded-xl flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Safe & Vault Services</h3>
            <p class="text-gray-600 mb-6 leading-relaxed">
              Professional safe opening, combination changes, and vault maintenance services for maximum security.
            </p>
            <a href="/services/safe-vault" class="inline-flex items-center gap-2 text-amber-600 font-semibold hover:gap-4 transition-all">
              Learn More
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Badges Section -->
  <section class="py-16 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto text-center">
        <div class="text-white">
          <div class="text-4xl font-black text-amber-500 mb-2">24/7</div>
          <p class="text-gray-400 text-sm">Emergency Service</p>
        </div>
        <div class="text-white">
          <div class="text-4xl font-black text-amber-500 mb-2">150mi</div>
          <p class="text-gray-400 text-sm">Service Radius</p>
        </div>
        <div class="text-white">
          <div class="text-4xl font-black text-amber-500 mb-2">Licensed</div>
          <p class="text-gray-400 text-sm">CA LCO 6687</p>
        </div>
        <div class="text-white">
          <div class="text-4xl font-black text-amber-500 mb-2">Expert</div>
          <p class="text-gray-400 text-sm">Professional Team</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Area Section -->
  <section class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto text-center">
        <h2 class="text-5xl font-black text-gray-900 mb-6">
          Serving Southern California
        </h2>
        <div class="w-24 h-1.5 bg-gradient-to-r from-amber-500 to-yellow-600 mx-auto mb-8"></div>
        <p class="text-xl text-gray-600 mb-12">
          150-mile radius from Fallbrook, CA covering multiple counties
        </p>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            San Diego County
          </div>
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            Riverside County
          </div>
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            Orange County
          </div>
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            Imperial County
          </div>
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            Los Angeles County
          </div>
          <div class="bg-white px-6 py-4 rounded-xl text-gray-800 font-bold shadow-lg hover:shadow-xl transition-shadow border-l-4 border-amber-500">
            San Bernardino County
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA Section -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-amber-500 via-yellow-500 to-amber-600"></div>
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, black 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
          Need Emergency Service?
        </h2>
        <p class="text-2xl text-gray-800 mb-10 font-medium">
          We travel up to 150 miles - 24/7 emergency locksmith service available
        </p>
        <a 
          href="tel:6197948355" 
          class="inline-flex items-center gap-4 bg-gray-900 text-white px-12 py-6 rounded-full text-2xl font-bold hover:bg-gray-800 transition-all duration-300 shadow-2xl hover:shadow-gray-900/50 hover:scale-105"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call Now: (619) 794-8355
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    50% {
      transform: translateY(-10px) translateX(-50%);
    }
  }
</style>
